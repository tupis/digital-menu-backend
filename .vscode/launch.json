{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug with TSX",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "watch"],
      "args": ["src/main/main.ts"],
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}

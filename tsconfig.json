{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@modules/*": ["src/modules/*"],
      "@http/*": ["src/http/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@utils/*": ["src/utils/*"],
      "@statusCode": ["src/types/http-status-code"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
